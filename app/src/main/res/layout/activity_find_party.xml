<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsplash"
    tools:context="edu.cmps121.app.activities.FindPartyActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/enter_find_party_name_et"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="@string/dreamteam"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/find_party_name_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/find_party_name_b"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:background="@color/theme_orange"
        android:onClick="onClickFindParty"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_find_party_name_et" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/droid_sans"
        android:text="@string/find_party"
        android:textAlignment="center"
        android:textColor="@color/theme_orange"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/enter_party_name"
        android:textAlignment="center"
        android:textColor="@color/theme_dark_grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enter_find_party_name_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/rest_places_b"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button_blue"
        android:fontFamily="@font/droid_sans"
        android:onClick="onClickRest"
        android:text="@string/rest"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/nearby_places_lv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pit_stop_tv"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/gas_places_b"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button_green"
        android:fontFamily="@font/droid_sans"
        android:onClick="onClickGas"
        android:text="@string/gas"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/nearby_places_lv"
        app:layout_constraintEnd_toEndOf="@+id/pit_stop_tv"
        app:layout_constraintTop_toBottomOf="@+id/pit_stop_tv"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/food_places_b"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button_yellow"
        android:fontFamily="@font/droid_sans"
        android:text="@string/food"
        android:textColor="@color/cardview_light_background"
        android:onClick="onClickFood"
        app:layout_constraintBottom_toTopOf="@+id/nearby_places_lv"
        app:layout_constraintStart_toStartOf="@+id/pit_stop_tv"
        app:layout_constraintTop_toBottomOf="@+id/pit_stop_tv"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/live_maps_b"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:background="@color/theme_orange"
        android:fontFamily="@font/droid_sans"
        android:onClick="onClickTrackParty"
        android:text="@string/track_your_party"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/maps_redirect_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearby_places_lv"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ListView
        android:id="@+id/nearby_places_lv"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/live_maps_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest_places_b" />

    <TextView
        android:id="@+id/pit_stop_tv"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:text="@string/make_a_pit_stop"
        android:textAlignment="center"
        android:textColor="@color/theme_orange"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rest_places_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/maps_redirect_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here_for_directions"
        android:textAlignment="center"
        android:textColor="@color/theme_orange"
        android:onClick="onClickDirections"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_maps_b" />

</android.support.constraint.ConstraintLayout>
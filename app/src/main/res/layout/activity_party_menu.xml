<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cmps121.app.PartyMenuActivity">

    <TextView
        android:id="@+id/team_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/party_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/party_menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/find_car_menu_b"
        android:layout_width="291dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/find_car"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:onClick="onClickFindCarMenu"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_car_menu_b" />

    <Button
        android:id="@+id/maps_menu_b"
        android:layout_width="291dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/maps"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:onClick="onClickMapsMenu"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_car_menu_b" />

    <Button
        android:id="@+id/settings_menu_b"
        android:layout_width="291dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:onClick="onClickSettingsMenu"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maps_menu_b" />

    <Button
        android:id="@+id/create_car_menu_b"
        android:layout_width="291dp"
        android:layout_height="69dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/holo_purple"
        android:text="@string/create_car"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:onClick="onClickCreateCarMenu"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/party_menu_tv" />
</android.support.constraint.ConstraintLayout>
